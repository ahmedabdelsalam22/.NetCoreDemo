@model Order

<h1>Create Order</h1>


<form method="post" asp-action="CreateOrder">
    <div class="m-1">
        <label asp-for="Name"></label>
        <input type="text" asp-for="Name" class="form-control" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>
    <div class="m-1">
        <label asp-for="PhoneNumber"></label>
        <input type="number" asp-for="PhoneNumber" class="form-control" />
        <span asp-validation-for="PhoneNumber" class="text-danger"></span>
    </div>
    <div class="m-1">
        <label asp-for="City"></label>
        <input type="text" asp-for="City" class="form-control" />
        <span asp-validation-for="City" class="text-danger"></span>
    </div>
    <div class="m-1">
        <label asp-for="Region"></label>
        <input type="text" asp-for="Region" class="form-control" />
        <span asp-validation-for="Region" class="text-danger"></span>
    </div>
    <div class="m-1">
        <label asp-for="Street"></label>
        <input type="text" asp-for="Street" class="form-control" />
        <span asp-validation-for="Street" class="text-danger"></span>
    </div>
    <div class="m-1">
        <label asp-for="DeviceName"></label>
        <input type="text" asp-for="DeviceName" class="form-control" />
        <span asp-validation-for="DeviceName" class="text-danger"></span>
    </div>
    <div class="m-1">
        <label asp-for="IssueDescription"></label>
        <input type="text" asp-for="IssueDescription" class="form-control" />
        <span asp-validation-for="IssueDescription" class="text-danger"></span>
    </div>
    <div class="m-3">
        <button type="submit" class="btn btn-primary">Send</button>
    </div>
</form>


@section Scripts
    {
    <Partial name="_ValidationScriptsPartial" />
}