@model IEnumerable<Order>

@if (User.IsInRole("admin"))
{
    <div class="row m-4 text-end">
        <div class="col-12">
            <a type="submit" class="btn btn-primary" asp-action="CreateOrder">Create Order</a>
        </div>
    </div>
}

<table class="table table-hover">
    <thead>
        <tr class="table-active">
            <th>Id</th>
            <th>Name</th>
            <th>PhoneNumber</th>
            <th>City</th>
            <th>Region</th>
            <th>Street</th>
            <th>DeviceName</th>
            <th>IssueDescription</th>
            @if (User.IsInRole("admin"))
            {
                <th>Delete</th>
            }
        </tr>
    </thead>

    <tbody>
        @foreach(var n in Model)
        {
            <tr>
                <td>@n.Id</td>
                <td>@n.Name</td>
                <td>@n.PhoneNumber</td>
                <td>@n.City</td>
                <th>@n.Region</th>
                <th>@n.Street</th>
                <th>@n.DeviceName</th>
                <th>@n.IssueDescription</th>
                @if (User.IsInRole("admin"))
                {
                    <td>
                        <a asp-action="DeleteOrder" asp-route-orderId="@n.Id" class="btn-danger">Delete</a>
                    </td>
                }
            </tr>
        }
    </tbody>

</table>